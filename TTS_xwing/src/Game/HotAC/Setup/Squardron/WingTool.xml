<Defaults>
    <Text class="title" fontSize="14" fontStyle="Bold" color="Black" alignment="MiddleCenter"
        preferredHeight="20"
        resizeTextForBestFit="true" />
    <Text class="label" fontSize="14" fontStyle="Bold" color="Black" alignment="MiddleRight"
        preferredHeight="20" preferredWidth="20"
        resizeTextForBestFit="false" />
    <Dropdown fontSize="14" color="#405b6f" itemTextColor="Black" resizeTextForBestFit="true"
        textColor="#FFFFFF" flexibleWidth="1" preferredWidth="50" preferredHeight="20" />
    <InputField fontSize="12" color="#E1E1E1" textColor="Black" resizeTextForBestFit="true"
        flexibleWidth="1" preferredWidth="40" />
    <Panel color="#405b6f" />
    <Button fontSize="12" color="#11100F" textColor="#E1E1E1" />
</Defaults>

<Panel id="squadronPopup" active="false" width="350" height="250" position="0 0 -50">
    <VerticalLayout padding="10 15 10 15" spacing="10">
        <!-- Title -->
        <Text text="Squadron" class="title" />

        <!-- Faction Section -->
        <HorizontalLayout spacing="5">
            <Text text="Faction:" class="label" />
            <Dropdown id="Faction" onValueChanged="onFactionChange" preferredWidth="40">
                <Option selected="true">Empire</Option>
                <Option>Rebel</Option>
                <Option>Scum</Option>
            </Dropdown>

            <!-- # of Ships Section -->
            <Text text="# of ships:" class="label" />
            <Dropdown id="shipCount" onValueChanged="onShipCountChange" preferredWidth="12">
                <Option selected="true">4</Option>
                <Option>3</Option>
                <Option>2</Option>
                <Option>1</Option>
            </Dropdown>
        </HorizontalLayout>

        <!-- Name Section -->
        <HorizontalLayout spacing="5">
            <Text text="Name:" class="label" />
            <Dropdown id="squadronNameDropdown" onValueChanged="onSquadronNameDropdownChange" />
            <InputField id="squadronNameInput" onEndEdit="onSquadronNameChange" />
        </HorizontalLayout>

        <!-- Color Section -->
        <HorizontalLayout spacing="5">
            <Text text="Color:" class="label" />
            <Dropdown id="squadronColorDropdown" onValueChanged="onSquadronColorChange">
                <Option selected="true">Rebel Slate</Option>
                <Option>Imperial Gray</Option>
                <Option>Scum Yellow</Option>
            </Dropdown>
            <Panel id="colorPreview" color="#FFFFFF" width="30" height="20" />
        </HorizontalLayout>

        <!-- Set Button -->
        <HorizontalLayout>
            <Panel flexibleWidth="1" />
            <Button id="applySquadronSettings" text="Set" onClick="applySquadronSettings" width="60"
                height="30" />
            <Panel flexibleWidth="1" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>