<Defaults>
    <Text class="title" fontStyle="Bold" color="White" alignment="MiddleCenter"
        resizeTextForBestFit="true" />
</Defaults>

<Panel id="TestStatus" width="650" height="600"
    position="0 350 -50"
    color="#666666"
    active="true">

    <VerticalLayout spacing="10" padding="10 10 10 10">
        <Text class="title"
            preferredHeight="80"
            text="Test Progress"
        />

        <Panel preferredWidth="580" preferredHeight="520"
            padding="10 10 0 10"
            alignment="MiddleCenter"
        >
            <VerticalScrollView
                id="TestScroll"
                scrollSensitivity="30"
                color="#444444"
            >
                <GridLayout id="TestGrid"
                    cellSize="50 50"
                    spacing="6 6"
                    padding="10 10 10 10"
                    constraint="FixedColumnCount"
                    constraintCount="10"
                    color="#222222"
                    alignment="UpperCenter"
                />
            </VerticalScrollView>
        </Panel>
    </VerticalLayout>
</Panel>