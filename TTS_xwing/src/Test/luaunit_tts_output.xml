<Defaults>
    <Text class="title" fontStyle="Bold" color="White" alignment="MiddleCenter"
        resizeTextForBestFit="true" />
</Defaults>

<Panel id="TestStatus" width="600" height="600"
    position="0 350 -50"
    color="#666666"
    active="true">
    <VerticalLayout>
        <Text class="title"
            preferredHeight="80"
            text="Test Progress"
        />
        <Panel preferredWidth="600" preferredHeight="500"
            padding="10 10 0 10"
            alignment="MiddleCenter"
        >
            <GridLayout id="TestGrid"
                cellSize="50 50"
                spacing="7 7"
                padding="8 0 10 0"
                color="#333333"
                constraint="FixedColumnCount"
                constraintCount="10"
                alignment="MiddleCenter"
            />
        </Panel>
    </VerticalLayout>
</Panel>