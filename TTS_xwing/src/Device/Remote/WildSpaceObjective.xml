<Defaults>
    <!-- hit area and fallback color -->
    <Button class="ManButton"
        width="18" height="18"
        color="#BBBBBB" />
</Defaults>

<Panel id="btnPanelB"
    active="false"
    position="0 50 -6"
    rotation="0 0 0"
    width="150" height="100"
    color="#00000000">
    <GridLayout id="gridB"
        childAlignment="MiddleCenter"
        cellSize="20 20"
        constraint="FixedColumnCount"
        constraintCount="3"
        spacing="4 4">
        <!-- Row 1: inner-ring straight (2-straight) -->
        <Button id="bl2" onClick="relocate">
            <Image image="2lbank" preserveAspect="true" />
        </Button>
        <Button id="s2" onClick="relocate">
            <Image image="2str" preserveAspect="true" />
        </Button>
        <Button id="br2" onClick="relocate">
            <Image image="2rbank" preserveAspect="true" />
        </Button>
        <!-- Row 2: outer-ring banks + inner-ring straight (1-straight) -->
        <Image color="#00000000" />
        <Button id="s1" onClick="relocate">
            <Image image="1str" preserveAspect="true" />
        </Button>
        <Image color="#00000000" />
    </GridLayout>
</Panel>

<!-- Big objective: 3-turns → 3-banks → 4-straight -->
<Panel id="btnPanelA"
    onMouseEnter="showPanel"
    onMouseExit="hidePanel"
    showAnimation="Grow"
    hideAnimation="Shrink"
    hideAnimationDelay="6"
    active="true"
    position="0 50 -10"
    rotation="0 0 0"
    width="180" height="120"
    color="#00000000">
    <GridLayout id="gridA"
        childAlignment="MiddleCenter"
        cellSize="20 20"
        constraint="FixedColumnCount"
        constraintCount="3"
        spacing="5 5">

        <Image color="#00000000" />
        <Button id="s4" onClick="relocate">
            <Image image="4str" preserveAspect="true" />
        </Button>
        <Image color="#00000000" />

        <Button id="bl3" onClick="relocate">
            <Image image="3lbank" preserveAspect="true" />
        </Button>
        <Button id="s3" onClick="relocate">
            <Image image="3str" preserveAspect="true" />
        </Button>
        <Button id="br3" onClick="relocate">
            <Image image="3rbank" preserveAspect="true" />
        </Button>

        <Button id="tl3" onClick="relocate">
            <Image image="3lturn" preserveAspect="true" />
        </Button>
        <Image color="#00000000" />
        <Button id="tr3" onClick="relocate">
            <Image image="3rturn" preserveAspect="true" />
        </Button>
    </GridLayout>
</Panel>